<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>{{name}} â€” {{role}}</title>
  <link rel="stylesheet" href="style.css">
</head>
<body>
  <header class="hero">
    <div class="container">
      <h1>{{name}}</h1>
      <p class="role">{{role}}</p>
      <p class="bio">{{bio}}</p>
    </div>
  </header>

  <main class="container">
    <section>
      <h2>Projects</h2>
      <div class="projects">
        {{#each projects}}
          <article class="project">
            <h3>{{this.title}}</h3>
            <p>{{this.description}}</p>
            {{#if this.link}}<p><a href="{{this.link}}">Live / Repo</a></p>{{/if}}
          </article>
        {{/each}}
      </div>
    </section>

    <section>
      <h2>Skills</h2>
      <p>{{skills}}</p>
    </section>
  </main>

  <footer class="container">
    <p>Generated by AI Portfolio Generator</p>
  </footer>
</body>
</html>
