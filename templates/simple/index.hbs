  <link rel="stylesheet" href="style.css">
</head>
<body>
  <header class="hero">
    <div class="container">
      <h1>{{name}}</h1>
      <p class="role">{{role}}</p>
      <p class="bio">{{bio}}</p>
    </div>
  </header>

  <main class="container">
    <section>
      <h2>Projects</h2>
      <div class="projects">
        {{#each projects}}
          <article class="project">
            <h3>{{this.title}}</h3>
            <p>{{this.description}}</p>
            {{#if this.link}}<p><a href="{{this.link}}">Live / Repo</a></p>{{/if}}
          </article>
        {{/each}}
      </div>
    </section>

    <section>
      <h2>Skills</h2>
      <div class="skills">
        {{#each (split skills ",")}}
        <span class="skill">{{this}}</span>
        {{/each}}
      </div>
    </section>

    <section>
      <h2>Contact</h2>
      <p>Let's connect and build something amazing together!</p>
      <div class="contact">
        {{#if email}}<a href="mailto:{{email}}">ğŸ“§ Email Me</a>{{/if}}
        {{#if github}}<a href="https://github.com/{{github}}" target="_blank">ğŸ™ GitHub</a>{{/if}}
        {{#if linkedin}}<a href="https://linkedin.com/in/{{linkedin}}" target="_blank">ğŸ’¼ LinkedIn</a>{{/if}}
      </div>
    </section>
  </main>

  <footer class="container">
