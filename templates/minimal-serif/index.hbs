<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{name}}</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <div class="container">
        <header class="header">
            <h1>{{name}}</h1>
            <p class="role">{{role}}</p>
        </header>

        <section class="bio">
            <p>{{bio}}</p>
        </section>

        <section class="projects">
            <h2>Work</h2>
            {{#each projects}}
            <div class="project">
                <h3>{{this.title}}</h3>
                <p>{{this.description}}</p>
                {{#if this.link}}<a href="{{this.link}}" target="_blank">â†’ View</a>{{/if}}
            </div>
            {{/each}}
        </section>

        <section class="skills">
            <h2>Skills</h2>
            <p>{{skills}}</p>
        </section>

        <footer class="footer">
            <div class="contact">
                {{#if email}}<a href="mailto:{{email}}">Email</a>{{/if}}
                {{#if githubUrl}}<a href="{{githubUrl}}" target="_blank">GitHub</a>{{/if}}
                {{#if linkedinUrl}}<a href="{{linkedinUrl}}" target="_blank">LinkedIn</a>{{/if}}
            </div>
            <p class="credit">Built with AI Portfolio Generator</p>
        </footer>
    </div>
</body>
</html>
